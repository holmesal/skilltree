.top.row
  .col-xs-12.col-sm-8
    .info
      p.name.editable(
        ng-model="project.name" 
        ng-class="{edit:edit}"
        medium-editor
        data-disable-toolbar
        options="{disableEditing: {{!edit}}, placeholder: 'Give your project a title', disableReturn: true}")
      p.description.editable(
        ng-model="project.description"
        ng-class="{edit:edit}"
        medium-editor
        data-disable-toolbar
        options="{disableEditing: {{!edit}}, placeholder: 'Give your project a description', disableReturn: true}")
  .col-xs-12.col-sm-4
    a.button.hidden-xs(
      href="{{project.source}}"
      target="_blank"
    ) 
      i.fa.fa-github-alt.withText
      span source
    a.button.visible-xs(
      href="{{project.source}}"
      target="_blank"
    )
      i.fa.fa-github-alt.withText
      span view source

.dash(ng-if="project.highlights")

.bottom(
  ng-if="project.highlights"
)
  highlight(
    ng-repeat="highlight in project.highlights"
    highlight="highlight"
  )

  //- add a highlight
  .row.highlight.prompt(
    ng-if="edit"
    ng-click="addHighlight()"
  )
    .hidden-xs.col-sm-1
      .button
        i.fa.fa-plus
    .col-xs-12.col-sm-11
      .info
        p.file
          span.visible-xs-inline
            i.fa.fa-plus
          span add a link to a file or folder on github

  //- extras
  .row
    .col-xs-12
      .extras
        .extra(
          ng-repeat="extra in project.extras"
        ) {{extra}}

